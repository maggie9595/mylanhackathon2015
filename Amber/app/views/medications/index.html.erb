<h1>Your Medications</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Dosage form</th>
      <th>Product number</th>
      <th>Active ingredient(s)</th>
      <th>Market status</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @medications.each do |medication| %>
      <tr>
        <td><%= medication.name.capitalize %></td>
        <td><%= medication.form.capitalize %></td>
        <td><%= medication.prod_number %></td>
        <td><%= medication.active_ingredients.capitalize %></td>
        <td><%= medication.market_status.capitalize %></td>
        <td><%= link_to 'Show', medication %></td>
        <td><%= link_to 'Edit', edit_medication_path(medication) %></td>
        <td><%= link_to 'Delete', medication, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

  </tbody>
</table>

<br>

<%= link_to 'New Medication', new_medication_path %>